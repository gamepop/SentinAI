@code {
    private MemoryStatusDto? memoryStatus;
    private List<MemoryDto>? memories;
    private string searchQuery = "";
    private int searchLimit = 25;
    private bool isSearching;
    private string? searchError;

    protected override async Task OnInitializedAsync()
    {
        await LoadStatusAsync();
        // Load recent memories on page load
        await LoadRecentMemoriesAsync();
    }

    private async Task LoadRecentMemoriesAsync()
    {
        if (memoryStatus?.Enabled != true)
        {
            return;
        }

        isSearching = true;
        searchError = null;

        try
        {
            var httpClient = HttpClientFactory.CreateClient();
            httpClient.BaseAddress ??= new Uri(Navigation.BaseUri);
            
            var response = await httpClient.GetFromJsonAsync<MemoryQueryResponse>(
                $"api/brain/memory/recent?limit={searchLimit}");

            if (response?.Memories != null)
            {
                memories = response.Memories.ToList();
            }
            else
            {
                memories = new List<MemoryDto>();
            }
        }
        catch (Exception ex)
        {
            searchError = ex.Message;
        }
        finally
        {
            isSearching = false;
        }
    }

    private async Task LoadStatusAsync()
    {
        try
        {
            var httpClient = HttpClientFactory.CreateClient();
            httpClient.BaseAddress ??= new Uri(Navigation.BaseUri);
            memoryStatus = await httpClient.GetFromJsonAsync<MemoryStatusDto>("api/brain/memory/status");
        }
        catch (Exception ex)
        {
            memoryStatus = new MemoryStatusDto(false, "Unknown", ex.Message);
        }
    }

    private async Task SearchMemoriesAsync()
    {
        if (memoryStatus?.Enabled != true)
        {
            searchError = "Memory system is disabled. Enable RAG store in configuration.";
            return;
        }

        isSearching = true;
        searchError = null;
        memories = null;

        try
        {
            var httpClient = HttpClientFactory.CreateClient();
            httpClient.BaseAddress ??= new Uri(Navigation.BaseUri);
            
            // If no query, load recent memories instead
            if (string.IsNullOrWhiteSpace(searchQuery))
            {
                await LoadRecentMemoriesAsync();
                return;
            }

            // Semantic search across all memories
            var response = await httpClient.GetFromJsonAsync<MemoryQueryResponse>(
                $"api/brain/memory/search?query={Uri.EscapeDataString(searchQuery)}&limit={searchLimit}");

            if (response?.Memories != null)
            {
                memories = response.Memories
                    .OrderByDescending(m => m.Score)
                    .ToList();
            }
            else
            {
                memories = new List<MemoryDto>();
            }
        }
        catch (Exception ex)
        {
            searchError = ex.Message;
        }
        finally
        {
            isSearching = false;
        }
    }

    private record MemoryStatusDto(
        [property: System.Text.Json.Serialization.JsonPropertyName("enabled")] bool Enabled,
        [property: System.Text.Json.Serialization.JsonPropertyName("provider")] string Provider,
        [property: System.Text.Json.Serialization.JsonPropertyName("description")] string Description);

    private record MemoryQueryResponse(
        [property: System.Text.Json.Serialization.JsonPropertyName("enabled")] bool Enabled,
        [property: System.Text.Json.Serialization.JsonPropertyName("count")] int Count,
        [property: System.Text.Json.Serialization.JsonPropertyName("memories")] List<MemoryDto> Memories);

    private record MemoryDto(
        [property: System.Text.Json.Serialization.JsonPropertyName("content")] string Content,
        [property: System.Text.Json.Serialization.JsonPropertyName("timestamp")] DateTimeOffset Timestamp,
        [property: System.Text.Json.Serialization.JsonPropertyName("score")] double Score,
        [property: System.Text.Json.Serialization.JsonPropertyName("metadata")] Dictionary<string, string>? Metadata);
}
