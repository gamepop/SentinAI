@page "/duplicates"
@using System.Net.Http.Json
@using System.Linq
@inject IHttpClientFactory HttpClientFactory
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Duplicate Files - SentinAI</PageTitle>

<h1>üîç Duplicate File Detection</h1>
<p class="text-muted">Find and remove duplicate files to free up disk space.</p>

@* Scan Controls *@
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">Scan for Duplicates</h5>
    </div>
    <div class="card-body">
        <div class="row g-3 align-items-end">
            <div class="col-md-6">
                <label class="form-label">Folder to Scan</label>
                <input type="text" class="form-control" @bind="scanPath" placeholder="e.g., C:\Users\YourName\Downloads" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Min File Size</label>
                <select class="form-select" @bind="minFileSizeKb">
                    <option value="0">Any size</option>
                    <option value="1">1 KB+</option>
                    <option value="100">100 KB+</option>
                    <option value="1024">1 MB+</option>
                    <option value="10240">10 MB+</option>
                    <option value="102400">100 MB+</option>
                </select>
            </div>
            <div class="col-md-2">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" @bind="includeSubfolders" id="includeSubfolders">
                    <label class="form-check-label" for="includeSubfolders">
                        Include subfolders
                    </label>
                </div>
            </div>
            <div class="col-md-2">
                <button class="btn btn-primary w-100" @onclick="StartScan" disabled="@(isScanning || string.IsNullOrWhiteSpace(scanPath))">
                    @if (isScanning)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                        <span>Scanning...</span>
                    }
                    else
                    {
                        <span class="oi oi-magnifying-glass me-1"></span>
                        <span>Scan</span>
                    }
                </button>
            </div>
        </div>
        
        @if (!string.IsNullOrWhiteSpace(scanMessage))
        {
            <div class="alert @scanAlertClass mt-3 mb-0">@scanMessage</div>
        }
    </div>
</div>

@* Scan Progress *@
@if (isScanning && scanProgress != null)
{
    <div class="card mb-4">
        <div class="card-body">
            <h6>Scan Progress</h6>
            <div class="progress mb-2" style="height: 25px;">
                <div class="progress-bar progress-bar-striped progress-bar-animated" 
                     role="progressbar" 
                     style="width: @(scanProgress.PercentComplete)%">
                    @(scanProgress.PercentComplete)%
                </div>
            </div>
            <small class="text-muted">
                Files scanned: @scanProgress.FilesScanned | 
                Duplicates found: @scanProgress.DuplicatesFound | 
                Current: @(scanProgress.CurrentFile ?? "...")
            </small>
        </div>
    </div>
}

@* Results Summary *@
@if (duplicateGroups != null && duplicateGroups.Any())
{
    <div class="card mb-4">
        <div class="card-header bg-warning">
            <h5 class="mb-0">
                ‚ö†Ô∏è Found @duplicateGroups.Count duplicate group(s) - @FormatBytes(totalDuplicateSize) can be freed
            </h5>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrWhiteSpace(lastScanRootPath))
            {
                <p class="text-muted mb-2">
                    Last scan: <code>@lastScanRootPath</code>
                </p>
            }
            <div class="d-flex gap-2 mb-3">
                <button class="btn btn-danger" @onclick="DeleteAllDuplicates" disabled="@isDeleting">
                    @if (isDeleting)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                    }
                    <span class="oi oi-trash me-1"></span>
                    Delete All Duplicates (Keep Oldest)
                </button>
                <button class="btn btn-outline-secondary" @onclick="RefreshGroups">
                    <span class="oi oi-reload me-1"></span>
                    Refresh
                </button>
            </div>
            
            @if (!string.IsNullOrWhiteSpace(deleteMessage))
            {
                <div class="alert @deleteAlertClass">@deleteMessage</div>
            }
        </div>
    </div>
    
    @* Duplicate Groups *@
    <div class="accordion" id="duplicateAccordion">
        @foreach (var (group, index) in duplicateGroups.Select((g, i) => (g, i)))
        {
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button @(index > 0 ? "collapsed" : "")" type="button" 
                            data-bs-toggle="collapse" data-bs-target="#collapse-@index">
                        <span class="badge bg-info me-2">@group.Files.Count files</span>
                        <span class="badge bg-secondary me-2">@FormatBytes(group.FileSize) each</span>
                        <code class="text-truncate" style="max-width: 500px;">@group.Hash[..16]...</code>
                    </button>
                </h2>
                <div id="collapse-@index" class="accordion-collapse collapse @(index == 0 ? "show" : "")" 
                     data-bs-parent="#duplicateAccordion">
                    <div class="accordion-body">
                        <table class="table table-sm table-hover">
                            <thead>
                                <tr>
                                    <th style="width: 40px;">
                                        <input type="checkbox" class="form-check-input" 
                                               @onchange="e => ToggleGroupSelection(group, (bool)(e.Value ?? false))" />
                                    </th>
                                    <th>File Path</th>
                                    <th style="width: 150px;">Modified</th>
                                    <th style="width: 100px;">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var file in group.Files.OrderBy(f => f.ModifiedDate))
                                {
                                    var isFirst = file == group.Files.OrderBy(f => f.ModifiedDate).First();
                                    <tr class="@(isFirst ? "table-success" : "")">
                                        <td>
                                            @if (!isFirst)
                                            {
                                                <input type="checkbox" class="form-check-input" 
                                                       checked="@selectedForDeletion.Contains(file.Path)"
                                                       @onchange="e => ToggleFileSelection(file.Path, (bool)(e.Value ?? false))" />
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">Keep</span>
                                            }
                                        </td>
                                        <td>
                                            <code class="small">@file.Path</code>
                                        </td>
                                        <td>
                                            <small>@file.ModifiedDate.ToLocalTime().ToString("g")</small>
                                        </td>
                                        <td>
                                            @if (!isFirst)
                                            {
                                                <button class="btn btn-sm btn-outline-danger" 
                                                        @onclick="() => DeleteSingleFile(file.Path)"
                                                        disabled="@isDeleting">
                                                    <span class="oi oi-trash"></span>
                                                </button>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
}
else if (!isScanning && duplicateGroups != null)
{
    <div class="alert alert-success">
        <span class="oi oi-check me-2"></span>
        No duplicate files found in the scanned location.
    </div>
}

@code {
    private string? scanPath;
    private int minFileSizeKb = 1;
    private bool includeSubfolders = true;
    
    private bool isScanning;
    private ScanProgressDto? scanProgress;
    private string? scanMessage;
    private string scanAlertClass = "alert-info";
    
    private List<DuplicateGroupDto>? duplicateGroups;
    private long totalDuplicateSize;
    private string? lastScanRootPath;
    private HashSet<string> selectedForDeletion = new();
    
    private bool isDeleting;
    private string? deleteMessage;
    private string deleteAlertClass = "alert-info";

    protected override async Task OnInitializedAsync()
    {
        // Load any existing duplicate groups
        await RefreshGroups();
    }

    private async Task StartScan()
    {
        if (string.IsNullOrWhiteSpace(scanPath)) return;
        
        isScanning = true;
        scanMessage = null;
        duplicateGroups = null;
        scanProgress = new ScanProgressDto(0, 0, 0, null);
        
        try
        {
            var httpClient = HttpClientFactory.CreateClient();
            httpClient.BaseAddress ??= new Uri(Navigation.BaseUri);
            httpClient.Timeout = TimeSpan.FromMinutes(30); // Long timeout for large scans
            
            var request = new
            {
                RootPath = scanPath,
                MinFileSizeBytes = minFileSizeKb * 1024L,
                IncludeSubdirectories = includeSubfolders
            };
            
            var response = await httpClient.PostAsJsonAsync("api/duplicates/scan", request);
            
            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<ScanResultDto>();
                if (result != null)
                {
                    scanMessage = $"‚úÖ Scan complete! Found {result.DuplicateGroups} duplicate groups ({FormatBytes(result.TotalDuplicateSize)} recoverable)";
                    scanAlertClass = result.DuplicateGroups > 0 ? "alert-warning" : "alert-success";
                    lastScanRootPath = result.RootPath;
                    await RefreshGroups();
                }
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                scanMessage = $"‚ùå Scan failed: {error}";
                scanAlertClass = "alert-danger";
            }
        }
        catch (Exception ex)
        {
            scanMessage = $"‚ùå Scan failed: {ex.Message}";
            scanAlertClass = "alert-danger";
        }
        finally
        {
            isScanning = false;
            scanProgress = null;
        }
    }

    private async Task RefreshGroups()
    {
        try
        {
            var httpClient = HttpClientFactory.CreateClient();
            httpClient.BaseAddress ??= new Uri(Navigation.BaseUri);
            
            var response = await httpClient.GetFromJsonAsync<DuplicateGroupsResponse>("api/duplicates/groups");
            if (response != null)
            {
                duplicateGroups = response.Groups;
                totalDuplicateSize = response.TotalRecoverableSize;
                lastScanRootPath = response.RootPath;
            }
        }
        catch
        {
            // Silently fail
        }
    }

    private void ToggleFileSelection(string path, bool selected)
    {
        if (selected)
            selectedForDeletion.Add(path);
        else
            selectedForDeletion.Remove(path);
    }

    private void ToggleGroupSelection(DuplicateGroupDto group, bool selected)
    {
        var oldest = group.Files.OrderBy(f => f.ModifiedDate).First();
        foreach (var file in group.Files)
        {
            if (file.Path != oldest.Path)
            {
                if (selected)
                    selectedForDeletion.Add(file.Path);
                else
                    selectedForDeletion.Remove(file.Path);
            }
        }
    }

    private async Task DeleteSingleFile(string path)
    {
        isDeleting = true;
        deleteMessage = null;
        
        try
        {
            var httpClient = HttpClientFactory.CreateClient();
            httpClient.BaseAddress ??= new Uri(Navigation.BaseUri);
            
            var response = await httpClient.PostAsJsonAsync("api/duplicates/delete", new { FilePaths = new[] { path } });
            
            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<DeleteResultDto>();
                if (result?.Errors != null && result.Errors.Any())
                {
                    deleteMessage = $"‚ö†Ô∏è Delete completed with errors: {result.Errors.First()}";
                    deleteAlertClass = "alert-warning";
                }
                else
                {
                    deleteMessage = "‚úÖ File deleted successfully";
                    deleteAlertClass = "alert-success";
                }
                selectedForDeletion.Remove(path);
                await RefreshGroups();
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                deleteMessage = $"‚ùå Delete failed: {error}";
                deleteAlertClass = "alert-danger";
            }
        }
        catch (Exception ex)
        {
            deleteMessage = $"‚ùå Delete failed: {ex.Message}";
            deleteAlertClass = "alert-danger";
        }
        finally
        {
            isDeleting = false;
        }
    }

    private async Task DeleteAllDuplicates()
    {
        if (duplicateGroups == null || !duplicateGroups.Any()) return;
        
        isDeleting = true;
        deleteMessage = null;
        
        try
        {
            var httpClient = HttpClientFactory.CreateClient();
            httpClient.BaseAddress ??= new Uri(Navigation.BaseUri);
            
            // Collect all duplicate files (keeping oldest in each group)
            var filesToDelete = new List<string>();
            foreach (var group in duplicateGroups)
            {
                var oldest = group.Files.OrderBy(f => f.ModifiedDate).First();
                filesToDelete.AddRange(group.Files.Where(f => f.Path != oldest.Path).Select(f => f.Path));
            }

            if (filesToDelete.Count == 0)
            {
                deleteMessage = "No duplicate files to delete";
                deleteAlertClass = "alert-info";
                return;
            }
            
            var response = await httpClient.PostAsJsonAsync("api/duplicates/delete", new { FilePaths = filesToDelete });
            
            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<DeleteResultDto>();
                deleteMessage = $"‚úÖ Deleted {result?.DeletedCount ?? 0} files, freed {FormatBytes(result?.BytesFreed ?? 0)}";
                if (result?.Errors != null && result.Errors.Any())
                {
                    deleteMessage += $". ‚ö†Ô∏è {result.Errors.Count} issues";
                    deleteMessage += $". Example: {result.Errors.First()}";
                    deleteAlertClass = "alert-warning";
                }
                else
                {
                    deleteAlertClass = "alert-success";
                }
                selectedForDeletion.Clear();
                await RefreshGroups();
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                deleteMessage = $"‚ùå Delete failed: {error}";
                deleteAlertClass = "alert-danger";
            }
        }
        catch (Exception ex)
        {
            deleteMessage = $"‚ùå Delete failed: {ex.Message}";
            deleteAlertClass = "alert-danger";
        }
        finally
        {
            isDeleting = false;
        }
    }

    private static string FormatBytes(long bytes)
    {
        if (bytes < 1024) return $"{bytes} B";
        if (bytes < 1024 * 1024) return $"{bytes / 1024.0:F1} KB";
        if (bytes < 1024 * 1024 * 1024) return $"{bytes / (1024.0 * 1024):F1} MB";
        return $"{bytes / (1024.0 * 1024 * 1024):F2} GB";
    }

    // DTOs
    private record ScanProgressDto(int PercentComplete, int FilesScanned, int DuplicatesFound, string? CurrentFile);
    private record ScanResultDto(int DuplicateGroups, long TotalDuplicateSize, int FilesScanned, string RootPath);
    private record DuplicateGroupsResponse(List<DuplicateGroupDto> Groups, long TotalRecoverableSize, string? RootPath);
    private record DuplicateGroupDto(string Hash, long FileSize, List<DuplicateFileDto> Files);
    private record DuplicateFileDto(string Path, DateTimeOffset ModifiedDate);
    private record DeleteResultDto(int DeletedCount, long BytesFreed, List<string>? Errors);
}
