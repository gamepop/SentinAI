{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "SentinAI.Web.Services.AgentBrain": "Debug"
    }
  },
  "AllowedHosts": "*",
  
  "Brain": {
    "ExecutionProvider": "CPU",
    "ModelPath": "",
    "ForceModelRedownload": false,
    "InferenceTimeoutSeconds": 60,
    "MaxSequenceLength": 4096,
    "MaxOutputTokens": 150,
    "Temperature": 0.1
  },
  "RagStore": {
    "Enabled": true,
    "Provider": "Weaviate",
    "Endpoint": "http://localhost:8080",
    "ClassName": "BrainMemory",
    "Vectorizer": "text2vec-ollama",
    "OllamaApiEndpoint": "http://host.docker.internal:11434",
    "OllamaModel": "nomic-embed-text",
    "TopK": 6,
    "MinScore": 0.55
  },
  "DeepScanRagStore": {
    "Enabled": true,
    "Endpoint": "http://localhost:8080",
    "ClassName": "DeepScanMemory",
    "Vectorizer": "text2vec-ollama",
    "OllamaApiEndpoint": "http://host.docker.internal:11434",
    "OllamaModel": "nomic-embed-text",
    "TopK": 10,
    "MinScore": 0.5
  }
}
