{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "SentinAI": "Debug"
    }
  },
  "SentinAI": {
    "MonitoredDrive": "C:\\",
    "DebounceSeconds": 30,
    "BatchSize": 1000,
    "HeavyWriteThresholdMB": 500,
    "ExcludedFolders": [
      "Windows",
      "Program Files",
      "Program Files (x86)",
      "$Recycle.Bin",
      "System Volume Information"
    ],
    "AutoApprovePatterns": [
      "*.tmp",
      "*.log",
      "*\\Temp\\*",
      "*\\Cache\\*"
    ]
  }
}
